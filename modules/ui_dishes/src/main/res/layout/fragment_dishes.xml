<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <View
        android:id="@+id/top_box"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/figma_arrow_back"
        app:layout_constraintTop_toTopOf="@id/top_box"
        app:layout_constraintStart_toStartOf="@id/top_box" />

    <TextView
        android:id="@+id/category"
        style="@style/sf_pro_medium_headline_1"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/top_box"
        app:layout_constraintEnd_toEndOf="@id/top_box"
        app:layout_constraintTop_toTopOf="@id/top_box"
        android:layout_marginTop="16dp"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        tools:text = "Санкт-Петербург"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/categories_account_photo"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="@id/top_box"
        app:layout_constraintTop_toTopOf="@id/top_box"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tags_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dishes_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tags_recycler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>